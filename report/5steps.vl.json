{
  "data": {"url": "output/formulas/figures_data/steps.csv",
           "format": {"parse": {
             "algorithm": null,
             "theta": "number",
             "step": "number",
             "density": "number",
             "theoretical": "number"}}},
  "facet": {"row": {"field": "algorithm", "type": "nominal"},
            "column": {"field": "step", "type": "ordinal"}},
  "spec": {
  "height": 100,
  "width": 120,
    "layer": [
      {
        "mark": {"type": "bar", "clip": true },
        "encoding": {
          "x": {"field": "theta", "type": "quantitative",
                "scale": {"domain": [-3,3]}},
          "y": {"field": "density", "type": "quantitative",
                "scale": {"domain": [0,3]}}
        }
      },
      {
        "mark": {"type": "line", "opacity": 0.7, "clip": true},
        "encoding": {
          "color": {"value": "black"},
          "x": {"field": "theta", "type": "quantitative",
                "scale": {"domain": [-3,3]}},
          "y": {"field": "theoretical", "type": "quantitative",
                "scale": {"domain": [0,3]}}}}
    ]
  }
}
